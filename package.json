{
  "name": "koa-typescript-boilerplate",
  "version": "1.0.0",
  "description": "A typescript and koa starter for building nodejs server",
  "keywords": [
    "boilerplate",
    "koa",
    "node",
    "prettier",
    "starter",
    "template",
    "tslint",
    "typescript",
    "pm2"
  ],
  "repository": "git@github.com:zhengminhui/koa-typescript-boilerplate.git",
  "license": "MIT",
  "author": "zhengminhui <zhmh1025@hotmail.com>",
  "main": "index.js",
  "scripts": {
    "build": "pm2 install typescript && pm2 start ecosystem.config.js",
    "dev": "nodemon",
    "dev:ndb": "ndb nodemon --watch 'src/**/*' -e ts,tsx --exec 'ts-node' ./app.ts",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:lint": "tslint --project . && prettier \"src/**/*.ts\" --list-different"
  },
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "axios": "^0.18.0",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-convert": "^1.2.0",
    "koa-helmet": "^4.0.0",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "koa-session": "^5.10.1",
    "mysql2": "^1.6.4",
    "qs": "^6.6.0",
    "rxjs": "^6.3.3",
    "sequelize": "^4.38.0",
    "sequelize-typescript": "^0.6.6"
  },
  "devDependencies": {
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^5.0.2",
    "@types/koa-compose": "^3.2.2",
    "@types/koa-convert": "^1.2.1",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.0.31",
    "@types/koa-session": "^5.7.4",
    "@types/mysql": "^2.15.5",
    "@types/node": "^10.9.4",
    "ndb": "^1.0.24",
    "nodemon": "^1.18.4",
    "pm2": "^3.2.4",
    "prettier": "^1.14.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.0.3"
  }
}
